---
version: '3'
services:
  kafkastack:
    labels:
      stack.name: <%= @service.stack_name %>
      stack.component: be
      be.component: application
      application.component: services
      platform.feature_set: <%= @service.current_feature_set %>
    image: landoop/fast-data-dev:2.2.1
    environment:
      CONNECT_HEAP: 2G
      BROKER_PORT: 9092
      REGISTRY_PORT: 8081
      WEB_PORT: 3040
      REST_PORT: 7082
      CONNECT_PORT: 0
      DISABLE_JMX: 1
      ENABLE_SSL: 0
      SAMPLEDATA: 0
      FORWARDLOGS: 0
      RUNTESTS: 0
    ports:
      - "8081:8081"
      - "9092:9092"
      - "3040:3040"
      - "7082"
