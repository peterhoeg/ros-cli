--- 
apiVersion: <%= @service.skaffold_version %>
kind: Config
deploy:
  helm:
    releases:
      - name: fluentd
        chartPath: <%= @service.chart_path %>/fluentd
        skipBuildDependencies: true
        overrides:
          labels:
            stack.name: <%= @service.stack_name %>
            stack.component: be
            be.component: application
            application.component: services
            platform.feature_set: <%= @service.current_feature_set %>
          replicaCount: 2
          fullnameOverride: fluentd
          resources:
            requests:
              cpu: 300m
              memory: 1Gi
        valuesFiles:
          - ./fluentd/etc/requests.conf
