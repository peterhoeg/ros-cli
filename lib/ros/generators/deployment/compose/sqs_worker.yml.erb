  <%= name %>_sqs_worker:
    image: "${IMAGE_REPOSITORY}/<%= name %>:${IMAGE_TAG}"
    command: ["bundle", "exec", "shoryuken", "-r", "./app/workers", "-C", "config/shoryuken.yml"]
    env_file:
      - ../platform/platform.env<% if has_envs %><%= "\n      - ../platform/#{name}.env" %><% end %>
    depends_on:
      - wait
    ports:
      - "3000"<% if mount %>
    volumes:
      - "${<%= context_dir %>}/services/<%= name %>:/home/rails/services/app"
      - "${<%= context_dir %>}/lib:/home/rails/lib"<% if mount_ros %>
      - "${ROS_CONTEXT_DIR}/lib:/home/rails/ros/lib"<% end %><% end %>
