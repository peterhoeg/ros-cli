  - name: server
    deploy:
      helm:
        releases:
        - name: <%= name %>
          chartPath: <%= chart_path %>
          skipBuildDependencies: true
          values:
            image: <%= name %>
          imageStrategy:
            helm: {}
          wait: false
          overrides:
            nameOverride: <%= name %>
            image:
              pullPolicy: <%= pull_policy %>
            imagePullSecrets:
              - name: <%= pull_secret %>
            app:
              command: ["bundle", "exec", "rails", "server", "-b", "0.0.0.0"]
              envFromSecrets:<% secrets_files.each do |name| %>
                - <%= name %><% end %>
            bootstrap:
              enabled: true
              command: ["bundle", "exec", "rails", "<% if is_ros_service %>app:<% end %>ros:db:reset", "<% if is_ros_service %>app:ros:<%= name %>:<% end %>db:seed"]
            resources:
              limits:
                cpu: 1
                memory: 2Gi
              requests:
                cpu: 0.5
                memory: 1.5Gi
