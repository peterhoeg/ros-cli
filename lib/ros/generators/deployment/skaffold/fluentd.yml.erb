--- 
apiVersion: skaffold/v1beta11
kind: Config
deploy:
  helm:
    releases:
      - name: fluentd-request-logger
        chartPath: <%= chart_path %>
        skipBuildDependencies: true
        overrides:
          replicaCount: 2
          fullnameOverride: fluentd-request-logger
          resources:
            requests:
              cpu: 300m
              memory: 1Gi
        valuesFiles:
          - ./fluentd/etc/requests.conf
