  - name: worker
    deploy:
      helm:
        releases:
        - name: <%= name %>-worker
          chartPath: <%= chart_path %>
          skipBuildDependencies: true
          values:
            image: <%= name %>
          imageStrategy:
            helm: {}
          wait: false
          overrides:
            nameOverride: <%= name %>
            image:
              pullPolicy: <%= pull_policy %>
            imagePullSecrets:
              - name: <%= pull_secret %>
            app:
              command: ["bundle", "exec", "sidekiq"<% if is_ros_service %>, "-r", "spec/dummy"<% end %>]
              envFromSecrets:<% secrets_files.each do |name| %>
                - <%= name %><% end %>
            bootstrap:
              enabled: false
            resources:
              limits:
                cpu: 1
                memory: 2Gi
              requests:
                cpu: 0.5
                memory: 1.5Gi
            service:
              enabled: false
