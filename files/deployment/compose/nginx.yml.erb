version: '3'
services:
  nginx:
    image: nginx
    ports:
      - "${NGINX_HOST_PORT:-3000}:80" # expose port 3000 on host and pass to port 80 of the nginx container
    volumes:
      - "./containers/nginx/nginx.conf:/etc/nginx/conf.d/default.conf"
    depends_on:<% service_names.each do |name| %><%= "\n      - #{name}" %><% end %>
