---
apiVersion: skaffold/v1beta10
kind: Config
deploy:
  helm:
    releases:
      - name: redis
        chartPath: stable/redis
        skipBuildDependencies: true
        overrides:
          usePassword: false
          metrics:
            enabled: true
          cluster:
            enabled: false
          resources:
            limits:
              cpu: 1
              memory: 1Gi
            requests:
              cpu: 0.2
              memory: 0.8Gi
